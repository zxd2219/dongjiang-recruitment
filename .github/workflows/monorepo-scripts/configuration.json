{
  "version": {
    "file": "package.json",
    "pattern": "\"version\": \"([0-9]+\\.[0-9]+\\.[0-9]+)\""
  },
  "global": {
    "files": [
      "package.json",
      "pnpm-lock.yaml",
      "pnpm-workspace.yaml",
      ".github/workflows/*",
      "packages/**/*",
      "scripts/**/*"
    ]
  },
  "packages": {
    "advertiser-service": {
      "type": "backend",
      "name": "advertiser-service",
      "workspace": "backend/advertiser-service",
      "scripts": {
        "lint": {
          "name": "lint",
          "command": "pnpm -w lint-fix ./backend/advertiser-service"
        },
        "build": {
          "name": "build",
          "command": "pnpm run build && pnpx @vercel/ncc build dist/main.js -o bundle -m -s",
          "artifact": "bundle"
        },
        "publish": {
          "name": "publish",
          "sub-type": "docker",
          "artifact": "bundle",
          "context": "bundle",
          "docker-file": "../Dockerfile.node"
        },
        "deploy": {
          "name": "deploy",
          "sub-type": "kubernetes",
          "port": 3000,
          "path": "/advertisers",
          "domain": "api.djzhaopin.ucstu.com"
        }
      }
    },
    "applicant-service": {
      "type": "backend",
      "name": "applicant-service",
      "workspace": "backend/applicant-service",
